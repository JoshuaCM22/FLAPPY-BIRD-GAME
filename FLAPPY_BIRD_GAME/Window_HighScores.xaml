        <Label FontSize="20" Name="lblRankHeaderAndContent"  Content="Rank" Foreground="Black" FontWeight="Normal" Canvas.Top="110" Canvas.Left="60" Height="315" />
        <Label FontSize="20" Name="lblDateHeaderAndContent" Content="     Date" Foreground="Black" FontWeight="Normal" Canvas.Top="110" Canvas.Left="193" Height="315" />
        <Label FontSize="20" Name="lblScoreHeaderAndContent" Content="Score" Foreground="Black" FontWeight="Normal" Canvas.Top="110" Canvas.Left="382" Height="315" />
        <Button Name="btnBack" Content="BACK" FontSize="16" FontWeight="Bold"  Click="btnBack_Click" Canvas.Left="20" Canvas.Top="455" Height="48" Width="130" Cursor="Hand" RenderTransformOrigin="0,0.479"/>

    </Canvas>
</Window>
